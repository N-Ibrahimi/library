<div class="container">

<center>
<div class="card border-primary justify-content-center  bg-light col-md-8 m-2">
    <div class="card-header  bg-info text-light col-lg-12 p-1 mt-3 mb-4"><h2 class="text-center mt-2"> Créer un événement </h2></div>

            <%= form_tag url_for(action: 'create'), method: "Post" do %>

            <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>

             <div class="card-body font-weight-bold justify-content-center text-left ">

                        <div class="form-group">
                        <%= label_tag 'Title' %>
                        <%= text_field_tag 'title', @event.title, class: 'form-control' %>
                        </div>

                        <div class="form-group">
                        <%= label_tag 'Description' %>
                        <%= text_field_tag 'description', @event.description, class: 'form-control' %>
                        </div>

                        <div class="form-group">
                        <%= label_tag 'Date' %>
                        <%= date_field_tag (:date, Date.today, class: 'form-control')%>
                        </div>

                        <div class="form-group">
                        <%= label_tag 'Lieu' %>
                        <%= text_field_tag 'city_id', @event.city_id, class: 'form-control' %>
                        </div>

                        <%= submit_tag "Publier", class:'btn btn-info col-md-4 btn-submit' %>
                        <% end %>
</div>
</div>
                      
                </center>

</div>