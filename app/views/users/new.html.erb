
  <div class="container">

<center>
<div class="card border-secondary col-md-5 m-2">
    <div class="card-header col-lg-12 p-2 mb-2 mt-3 bg-danger text-white"><h2>Sign up</h2></div>

  <%= form_for :users do |f| %>    

  <div class="card-body font-weight-bold ">
    <div class="form-group">
      <div class="field justify-content-center">
          <%= f.label :first_name, style:" control-label", class:"col-md-7 text-left mt-1" %><br/>
          <%= f.first_name:first_name, autofocus: true,class:"col-md-7 form-control", autocomplete: "first name" %>
        </div>
          <div class="field justify-content-center">
          <%= f.label :last_name, style:" control-label", class:"col-md-7 text-left mt-1" %><br/>
          <%= f.lastname_field :last_name, autofocus: true,class:"col-md-7 form-control", autocomplete: "last name" %>
        </div>
          <div class="field justify-content-center">
          <%= f.label :user_name, style:" control-label", class:"col-md-7 text-left mt-1" %><br/>
          <%= f.username_field :user_name, autofocus: true,class:"col-md-7 form-control", autocomplete: "user name" %>
        </div>

        <div class="field justify-content-center">
          <%= f.label :email, style:" control-label", class:"col-md-7 text-left mt-1" %><br/>
          <%= f.email_field :email, autofocus: true,class:"col-md-7 form-control", autocomplete: "email" %>
        </div>

        <div class="field justify-content-center">
          <%= f.label :password , style:" control-label", class:"col-md-7 text-left mt-1"%>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password,class:"col-md-7 form-control", autocomplete: "new-password" %>
        </div>

        <div class="field justify-content-center">
          <%= f.label :password_confirmation, style:" control-label", class:"col-md-7 text-left mt-1" %><br/>
          <%= f.password_field :password_confirmation, class:"col-md-7 form-control",autocomplete: "new-password" %>
        </div>

        <div class="actions row d-flex justify-content-around col-md-12"">
          <%= f.submit "Sign up",  class:"btn btn-outline-success col-md-3 mt-1", style:"display:inline-block"%>
        </div>
      <% end %>
      </div>
      </div>
      <center>
      </div>



